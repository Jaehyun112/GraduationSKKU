<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_camera_top"
        >
        <FrameLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            tools:context=".Camera.CameraTensorflow.CameraActivity" >
        </FrameLayout>
        <!--android:layout_centerInParent="true"-->


        <View
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_camera_guide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/guide_stroke_sky"
            />
        <View
            android:visibility="gone"
            android:id="@+id/activty_camera_capture_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/activty_camera_notAccurate_textview"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="250dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="강아지 얼굴을 고정해주세요"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/rouned_notaccurate_bg"
            />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/activity_camera_top"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    </RelativeLayout>



</RelativeLayout>


