<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="5dp">
    <RelativeLayout
        android:id="@+id/main_activity_result_item_image_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/rounded_black_stroke_fill_gray"
        >
        <ImageView
            android:id="@+id/mian_activity_result_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/main_activity_result_item_x"
            android:layout_margin="4dp"
            android:layout_alignParentEnd="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/main_item_delete_ic"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/mian_activity_result_item_title"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>