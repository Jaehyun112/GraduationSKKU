<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    >
    <LinearLayout
        android:id="@+id/main_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="21dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="촬영이 완료되었습니다."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제대로 촬영되지 않은 사진은"
            android:textSize="16sp"
            android:textColor="#999999"
            android:textAlignment="center"
            />
        <TextView
            android:drawableStart="@drawable/delete_icon_xml"
            android:drawablePadding="5dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 눌러 다시 찍어주세요."
            android:textSize="16sp"
            android:textColor="#999999"
            android:textAlignment="center"
            />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/main_result_recylverview"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/main_info_container"
        android:layout_above="@id/main_complete_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/main_complete_button"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="완료"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#098CFF"
        />

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        >
    </ProgressBar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model Downloading..."
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#000000"></TextView>
    </LinearLayout>
</RelativeLayout>